# {{ ansible_managed }}

upstream my_app {
    server 127.0.0.1:3000;
}

server {
	listen 80 default_server;

	listen [::]:80 default_server ipv6only=on;
	root /usr/share/nginx/html;
	index index.html index.htm;

    location / {
        try_files $uri @proxy;
    }

    location @proxy {
        proxy_redirect off;
        proxy_pass http://my_app;
    }
}
